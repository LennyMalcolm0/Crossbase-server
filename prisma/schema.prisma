datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  userId      String  @unique
  firstName   String
  lastName    String
  phoneNumber String?
}

model Store {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  type      StoreType
  url       String
  key       String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt

  insights Insight[]
}

enum StoreType {
  SHOPIFY
  AMAZON_FBA
  WOO_COMMERCE
  GUMROAD
  BIG_COMMERCE
}

enum Role {
  user
  assistant
}

type Message {
  role    Role
  content String
}

model Insight {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  title     String
  messages  Message[]
  pinned    Boolean
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt

  store   Store  @relation(fields: [storeId], references: [id])
  storeId String @db.ObjectId
}

model Shopify_Session {
  id          String   @id @map("_id")
  shop        String   @unique
  state       String?
  scope       String?
  accessToken String?
  isOnline    Boolean?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
